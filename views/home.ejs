<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="ShopSee">
    <meta name="keywords" content="books, mobile, shopping, shopsee">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShopSee</title>
    <link rel="stylesheet" href="assets/style1.css">
    <link rel="shortcut icon" href="assets/images/favicon.ico" type="image/x-icon">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">ShopSee</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About Us</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                 Products
                </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <form action="/book" method="GET">
                                    <input type="submit" class="btn" value="Books">
                                </form>
                            </li>
                            <li>
                                <form action="/mobile" method="GET">
                                    <input type="submit" class="btn" value="Mobile">
                                </form>
                            </li>
                            <li>
                                <form action="/laptop" method="GET">
                                    <input type="submit" class="btn" value="Laptop">
                                </form>
                            </li>
                            <li>
                                <form action="/shoes" method="GET">
                                    <input type="submit" class="btn" value="Shoes">
                                </form>
                            </li>
                            <li>
                                <form action="/sport" method="GET">
                                    <input type="submit" class="btn" value="Sports">
                                </form>
                            </li>
                            <li>
                                <form action="/electronics" method="GET">
                                    <input type="submit" class="btn" value="Electronics">
                                </form>
                            </li>
                            <li>
                                <form action="/cloth" method="GET">
                                    <input type="submit" class="btn" value="Cloths">
                                </form>
                            </li>

                        </ul>
                    </li>

                </ul>

                <form class="d-flex ">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>

                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                      <%- username %>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li>
                            <form action="/cart" method="GET">
                                <input type="submit" class=" btn" value="CART">
                            </form>
                        </li>
                        <li> <a href="\logout" class="btn btn-light">Log Out</a>
                        </li>


                        <li>
                            <form action="/userdelete" method="POST">
                                <input type="submit" class="btn" value="Delete">
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>



    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://realkart.in/images/home/slide-2.jpg" class="d-block w-100" alt="..." height="500px">
            </div>
            <div class="carousel-item ">
                <img src="https://yallah-shop.com/wp-content/uploads/2016/12/Electronics-2.jpg" class="d-block w-100" alt="..." height="500px">
            </div>
            <div class="carousel-item ">
                <img src="https://i.pinimg.com/originals/81/26/60/812660ad39d4a7a37634ccf37aaa3618.jpg" class="d-block w-100" alt="..." height="500px">
            </div>
            <div class="carousel-item ">
                <img src="https://img.freepik.com/free-vector/modern-sale-banner-website-slider-template-design_54925-45.jpg" class="d-block w-100" alt="..." height="500px">
            </div>

        </div>
    </div>
    <hr>

    <div style="text-align: center;">
        <h2>Items Available</h2>
    </div>
    <hr>
    <div class="row container-fluid" style=" justify-content: center;">
        <% 
     
        for(var i = 0; i< results.length; i++) {
           %>
            <div class="searchCard card my-2 mx-1  mb-3" style="width: 18rem;">
                <img class="  card-img-top" src="assets/images/<%-results[i].productId%>.jpg" alt="" height="350px">
                <hr>
                <div class="card-body">

                    <h3 class="card-title">
                        <%-results[i].product %>
                    </h3>
                    <h5>
                        <%-results[i].description%>
                    </h5>
                    <h5 style="text-decoration: line-through;">Rs.
                        <%-Math.ceil(1.15*results[i].price)%>.00
                    </h5>
                    <h5>
                        Rs.
                        <%-results[i].price%>.00
                    </h5>
                    <hr>
                    <a class="btn btn-success edit" href="/home/<%=results[i].productId%>" style="float: right;">Add to Cart</a>
                </div>
            </div>
            <%}%>
    </div>
    <footer>
        Copyright &copy; ShopSee.com
    </footer>
</body>
