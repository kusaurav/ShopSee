<%- include ("./partials/header") %>
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://realkart.in/images/home/slide-2.jpg" class="d-block w-100" alt="..." height="400px">
            </div>
            <div class="carousel-item ">
                <img src="https://yallah-shop.com/wp-content/uploads/2016/12/Electronics-2.jpg" class="d-block w-100" alt="..." height="400px">
            </div>
            <div class="carousel-item ">
                <img src="https://i.pinimg.com/originals/81/26/60/812660ad39d4a7a37634ccf37aaa3618.jpg" class="d-block w-100" alt="..." height="400px">
            </div>
            <div class="carousel-item ">
                <img src="https://img.freepik.com/free-vector/modern-sale-banner-website-slider-template-design_54925-45.jpg" class="d-block w-100" alt="..." height="400px">
            </div>

        </div>
    </div>
    <hr>

    <div style="text-align: center;">
        <h2>Items Available</h2>
    </div>
    <hr>
    <div class="row container-fluid" style=" justify-content: center;">
        <% for(var i=0; i< results.length; i++) { %>
            <div class="searchCard card my-2 mx-1  mb-3" style="width: 18rem;">
                <img class="  card-img-top" src="assets/images/<%-results[i].productId%>.jpg" alt="" height="350px">
                <hr>
                <div class="card-body">

                    <h3 class="card-title">
                        <%-results[i].product %>
                    </h3>
                    <h5>
                        <%-results[i].description%>
                    </h5>
                    <h5 style="text-decoration: line-through;">Rs.
                        <%-Math.ceil(1.15*results[i].price)%>.00
                    </h5>
                    <h5>
                        Rs.
                        <%-results[i].price%>.00
                    </h5>
                    <hr>
                    <a class="btn btn-success edit" href="/home/<%=results[i].productId%>" style="float: right;">Add to
                        Cart</a>
                </div>
            </div>
            <%}%>
    </div>
    <%- include ("./partials/footer") %>